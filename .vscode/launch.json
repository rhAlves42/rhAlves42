{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker Compose (Development)",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose -f docker-compose.development.yml up -d --build",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Docker Compose (Production)",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose -f docker-compose.production.yml up -d --build",
      "cwd": "${workspaceFolder}"
    }
  ]
}
