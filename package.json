{
  "name": "ricardo-alves-portifolio",
  "description": "My personal portifolio",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Ricardo Alves",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "upgrade": "npx ncu -u && npm install",
    "type-check": "npx tsc --noEmit",
    "dc:up": "docker-compose --env-file .env up --build",
    "dc:down": "docker-compose --env-file .env down",
    "dc:clear": "docker-compose --env-file .env down -v",
    "dc:prod": "docker-compose -f docker-compose.prod.yml --env-file .env up --build -d",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.2.2",
    "@notionhq/client": "^4.0.2",
    "@sentry/nextjs": "^10",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.0.13",
    "clsx": "^2.1.1",
    "next": "15.4.10",
    "notion-to-md": "^3.1.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/tailwindcss": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-check-updates": "^17.1.15",
    "postcss": "^8.5.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.0.13",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
